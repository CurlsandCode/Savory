<h2> New Recipe </h2>
<%= form_for @recipe do |f| %>
<label> Name:</label> <br>
<%= f.text_field :name %> <br>
<label> Description:</label><br>
<%= f.text_area :description %> <br>
<%= f.file_field :image %>
<br>
<h3>Ingredients</h3>

    <%= f.fields_for :recipe_ingredients do |ri| %>
      <%= ri.label :quantity %>
      <%= ri.text_field :quantity %>

      <%= ri.fields_for :ingredient do |i| %>
        <%= i.label :name %>
        <%= i.text_field :name %><br>
      <% end %>
    <% end %>
    
     <h3>Directions</h3>

    <%= f.fields_for :directions do |d| %>
      <%= d.label :step %>
      <%= d.text_field :step %>
    <% end %>
    <br>
<%= f.submit %>
<% end %>
