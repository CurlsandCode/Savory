<%= image_tag @recipe.image.url(:medium), class: "img-responsive recipeImage" %>
<h1 class="recipeName"><%= @recipe.name %></h1>
<p class="recipeDescription"> <%= @recipe.description %></p>
<div class="chefName"><strong>Created by: Chef <%= link_to @recipe.user.username, user_recipes_path(@recipe.user) %></strong></div>
<div class="btn-group pull-right">
  <%= link_to like_recipe_path(@recipe), method: :put, class: "btn btn-default" do %>
    <span class="glyphicon glyphicon-chevron-up"></span>
    Upvote
    <%= @recipe.get_upvotes.size %>
  <% end %>
  <%= link_to dislike_recipe_path(@recipe), method: :put, class: "btn btn-default" do %>
	<span class="glyphicon glyphicon-chevron-down"></span>
    Downvote
    <%= @recipe.get_downvotes.size %>
  <% end %>
</div>
<br>
<strong>Ingredients:</strong>
 <% @recipe.recipe_ingredients.each do |ri| %>
<li class="recipeIngredients"><%= ri.quantity %> of <%= ri.ingredient.name %> </li> 
 <%end %> 
  
  <br>
  <strong>Directions:</strong>
  <% @recipe.directions.each do |d| %>
   
    <li class="recipeSteps"><%= d.step %></li>

  <% end %>
  <br>
 <button type="button" class="btn btn-default">
    <%= link_to 'Back', recipes_path %>
 </button>
<% if @recipe.user == current_user %>
    <button type="button" class="btn btn-default">
    <%= link_to 'Edit',  edit_recipe_path %>
    </button>
     <button type="button" class="btn btn-default">
    <%= link_to 'Delete', recipe_path, method: :delete, data:{confirm: "Are you sure?"} %>
     </button>
<% end %>
   <button class="js-next btn btn-default" data-id="<%= @recipe.id %>">Next Recipe</button> 
<br />
<div class="row">
     <div class="white-well">
    <h3><%= @recipe.comments.count %> Comment(s)</h3>
      <% @recipe.comments.each do |comment| %>
      <div class="pull-left" id="comment-<%= comment.id %>">
       <%= comment.body %>
			   Submitted <strong><%= time_ago_in_words(comment.created_at) %> ago</strong> by
          <%= comment.user.username %>
      </div>
      <% end %>
    </div>
<% if current_user %>
     <br />
      <h4>Add a comment:</h4>
        <%= form_for @comment, url: recipe_comments_path(@recipe, @comment)  do |f| %>
          <% if @comment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

          <ul>
            <% @comment.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
           <%= f.text_area :body, class: 'commentBox form-control' %> <br />
           <%= f.submit "Comment", class: "btn btn-primary" %> 
        <% end %><br>
    <% else %>
      <p>Please log in order to add a comment.</p>
    <% end %>
    