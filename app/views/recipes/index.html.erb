<h1>Latest Recipes</h1>
  <%= render "latest_recipes", recipe: @recipe %>
    <br />
    
<h1 id="allrecipes">Recipes</h1>
<% @recipes.each_slice(3) do |recipes| %>
  <div class="row">
    <% recipes.each do |recipe| %>
      <div class="col-md-4">
        <div class="recipe">
          <div class="image_wrapper">
            <%= link_to recipe do %>
              <%= image_tag recipe.image.url(:medium), class: "img-responsive" %>
            <% end %>
          	</div>
          	<h2>
            	<%= link_to recipe.name, recipe %>
          	</h2>
            	<p id="description-<%= recipe.id %>"><%= truncate recipe.description %></p>
            	<a href="#" class="js-more btn btn-primary btn-sm" data-id="<%= recipe.id %>">Read More</a>  
        </div>
      </div>
    <% end %>
  </div>
<% end %>

