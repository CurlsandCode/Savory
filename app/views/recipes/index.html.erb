<h1>Latest Recipes</h1>
  <%= render "latest_recipes", recipe: @recipe %>
    <br />
    
<h1 id="allrecipes">Recipes</h1>
  <% @recipes.each_slice(3) do |recipes| %>
   <div class="row">
    <% recipes.each do |recipe| %>
      <div class="col-md-4 col-sm-6  hero-feature">
      <div class="thumbnail">
       <div class="card card-inverse text-center" style="background-color: #2E2E2E; border-color: #333;">
         <%= link_to recipe do %>
          <%= image_tag recipe.image.url(:medium), class: "img-responsive card-img-top" %>
           <% end %>
         <div class="card-block">
        <h4 class="card-title"><%= link_to recipe.name, recipe %></h4>
         <hr>
       <p class="card-text white-text"  id="description-<%= recipe.id %>"><%= truncate(recipe.description, length:25) %></p>
    <a href="#" class="js-more" data-id="<%= recipe.id %>">Read more<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span> </a>
  </div>
</div>
</div>
</div>
<% end %>
<% end %>



  
 